<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="me.dong.showmetheenergy_android.LankActivity"
    tools:showIn="@layout/activity_lank">

    <LinearLayout
        android:id="@+id/linearLayout_lank_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:text="RANK"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:paddingLeft="8dp"
            android:text="ID"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="POINT"
            android:textColor="#ffffff"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="RANK CHANGE"
            android:textColor="#ffffff"
            android:textSize="18sp"/>
    </LinearLayout>

    <View
        android:id="@+id/view_whitebar"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/linearLayout_lank_title"
        android:layout_margin="8dp"
        android:background="@drawable/ic_whitebar"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_lank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/view_whitebar"/>


</RelativeLayout>
