<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".SigninActivity"
    tools:showIn="@layout/activity_signin">

    <View
        android:id="@+id/view_standard"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_width="10dp"
        android:layout_height="10dp"/>

    <ImageView
        android:layout_marginBottom="85dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/view_standard"
        android:id="@+id/imageView_appname"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_title"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView_appname"
        android:id="@+id/imageView_logo"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@drawable/ic_logo"/>

    <ImageView
        android:layout_margin="8dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_button_signin"
        android:id="@+id/button_signin"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
